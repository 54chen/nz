/* 引导添加到我的小程序 */
.addMyMiniapp {
  color: #333;
  line-height: 1.2;
  background: #fff;
  padding: 24rpx 24rpx;
  border-radius: 12rpx;
  position: fixed;
  top: 20rpx;
  right: 24rpx;
  z-index: 999;
  box-shadow: 0 16rpx 30rpx -12rpx rgba(88, 88, 88, 0.2);
}

.addMyMiniapp>view {
  font-size: 24rpx;
  font-weight: 500;
}

.addMyMiniapp>text {
  font-size: 20rpx;
  font-weight: 200;
}

.addMyMiniapp::before {
  content: '';
  width: 20rpx;
  height: 20rpx;
  background: #fff;
  transform: rotate(45deg);
  position: absolute;
  right: 118rpx;
  top: -10rpx;
}

.bright789_view_hide{
 display: none;
}
.bright789_view_show{
 display: block;
}

.bright789-text{
 font-size: 40rpx;
 line-height: 40px;
 color: #ff0000;
}

